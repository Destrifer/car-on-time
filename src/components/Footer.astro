<style>
	nav a {
		display: inline-block;
		padding: 0.5rem 1rem;
		text-decoration: none;
		color: black;
		font-weight: 500;
		position: relative;
		border-top: 2px solid transparent;
		transition: all 0.3s ease;
	}

	/* Эффект при наведении */
	nav a:hover {
		color: red;
		transform: scale(1.05);
	}

	/* Полоса сверху */
	nav > a:hover::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 2px;
		background-color: red;
		animation: slideIn 0.3s forwards;
	}

	/* Анимация появления полосы */
	@keyframes slideIn {
		0% {
			width: 0;
		}
		100% {
			width: 100%;
		}
	}
</style>
