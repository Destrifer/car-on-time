---
const { car } = Astro.props;
import { Image } from "astro:assets";
---

<div class="car-card text-center">
	<Image
		src={car.images[0].image}
		alt={car.model}
		width="200"
		height="150"
		decoding="async"
		loading="lazy"
	/>
	<h3>{car.model}</h3>
	<p>Transmission: {car.transmission}</p>
	<p>Seats: {car.seats}</p>
	<p>Engine: {car.engine_capacity} L / {car.engine_hp} HP</p>
	<p>Deposit: {car.deposit}</p>
	<p>Rent Period: {car.rent_period_days} days</p>
	<p>Price: {car.rate_subtotal}</p>
	<!-- Передаем id автомобиля в URL -->
	<a href={`/order/${car.id}`} class="order-button">Бронировать</a>
</div>

<style>
	.car-card {
		border: 1px solid #ddd;
		padding: 16px;
		border-radius: 8px;
		margin-bottom: 20px;
	}
	.car-card img {
		width: 100%;
		height: auto;
		object-fit: cover;
		border-radius: 4px;
	}
	.order-button {
		display: inline-block;
		margin-top: 16px;
		padding: 10px 20px;
		background-color: #e60000;
		color: white;
		text-decoration: none;
		border-radius: 4px;
		transition: background-color 0.3s;
	}
	.order-button:hover {
		background-color: #0056b3;
	}
</style>
